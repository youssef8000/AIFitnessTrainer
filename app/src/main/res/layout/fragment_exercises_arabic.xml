<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".arabic.exercises_arabic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        android:textDirection="rtl">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layoutDirection="rtl"
            android:textDirection="rtl"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اختر التمرين"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:padding="10dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/parentLayout"
            android:orientation="vertical"
            android:layout_marginBottom="70dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardMaxElevation="5dp"
                android:layout_marginTop="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/cardcolor"
                    android:padding="5dp">

                    <!-- Image view on the left side -->
                    <ImageView
                        android:id="@+id/exercise_image"
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:contentDescription="Image description"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/bicep_curlfinal"
                        />

                    <!-- Linear layout for title and button on the right side -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_toLeftOf="@id/exercise_image"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!-- Text view for title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bicep Curl"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <!-- Button -->
                        <TextView
                            android:id="@+id/bicep_curl"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="70dp"
                            android:background="@drawable/button_color"
                            android:fontFamily="@font/robotoblack"
                            android:gravity="center"
                            android:text="ابدأ التمرين"
                            android:textColor="@color/black" />
                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardMaxElevation="5dp"
                android:layout_marginTop="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/cardcolor"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/exercise_image_push"
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/pushupfinal"
                        android:scaleType="centerCrop"
                        android:contentDescription="Image description"/>
                    <!-- Linear layout to contain image, text, and button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_toLeftOf="@id/exercise_image_push"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Push up"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                        <!-- Button -->
                        <TextView
                            android:id="@+id/Push_up"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="70dp"
                            android:background="@drawable/button_color"
                            android:fontFamily="@font/robotoblack"
                            android:gravity="center"
                            android:text="ابدأ التمرين"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardMaxElevation="5dp"
                android:layout_marginTop="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/cardcolor"
                    android:padding="5dp">
                    <ImageView
                        android:src="@drawable/s"
                        android:scaleType="centerCrop"
                        android:id="@+id/exercise_image_shoulder_press"
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:contentDescription="Image description"/>
                    <!-- Linear layout to contain image, text, and button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_toLeftOf="@id/exercise_image_shoulder_press"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shoulder press"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                        <!-- Button -->
                        <TextView
                            android:id="@+id/Shoulder_press"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="70dp"
                            android:background="@drawable/button_color"
                            android:fontFamily="@font/robotoblack"
                            android:gravity="center"
android:text="ابدأ التمرين"                            android:textColor="@color/black"/>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardMaxElevation="5dp"
                android:layout_marginTop="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/cardcolor"
                    android:padding="5dp">
                    <!-- Image view -->
                    <ImageView
                        android:src="@drawable/squatfinal"
                        android:scaleType="centerCrop"
                        android:id="@+id/exercise_image_squat"
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:contentDescription="Image description"/>
                    <!-- Linear layout to contain image, text, and button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_toLeftOf="@id/exercise_image_squat"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Squat"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                        <!-- Button -->
                        <TextView
                            android:id="@+id/Squat"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="70dp"
                            android:background="@drawable/button_color"
                            android:fontFamily="@font/robotoblack"
                            android:gravity="center"
android:text="ابدأ التمرين"                            android:textColor="@color/black"/>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardMaxElevation="5dp"
                android:layout_marginTop="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/cardcolor"
                    android:padding="5dp">
                    <!-- Image view -->
                    <ImageView
                        android:src="@drawable/lateral_raisefinal"
                        android:scaleType="centerCrop"
                        android:id="@+id/exercise_image_lateral"
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:contentDescription="Image description"/>
                    <!-- Linear layout to contain image, text, and button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_toLeftOf="@id/exercise_image_lateral"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lateral raises"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                        <!-- Button -->
                        <TextView

                            android:id="@+id/lateral_raises"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="70dp"
                            android:background="@drawable/button_color"
                            android:fontFamily="@font/robotoblack"
                            android:gravity="center"
android:text="ابدأ التمرين"                            android:textColor="@color/black"/>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardMaxElevation="5dp"
                android:layout_marginTop="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/cardcolor"
                    android:padding="5dp">
                    <!-- Image view -->
                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/exercise_image_lungefinal"
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:contentDescription="Image description"
                        android:src="@drawable/lungefinal" />
                    <!-- Linear layout to contain image, text, and button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_toLeftOf="@id/exercise_image_lungefinal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Lunge"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                        <!-- Button -->
                        <TextView
                            android:id="@+id/lunge"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="70dp"
                            android:background="@drawable/button_color"
                            android:fontFamily="@font/robotoblack"
                            android:gravity="center"
android:text="ابدأ التمرين"                            android:textColor="@color/black" />
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardMaxElevation="5dp"
                android:layout_marginTop="5dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="@drawable/cardcolor"
                    android:padding="5dp">
                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/exercise_image_dumbbell_tricepfinal"
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:contentDescription="Image description"
                        android:src="@drawable/dumbbell_tricepfinal" />
                    <!-- Linear layout to contain image, text, and button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_toLeftOf="@id/exercise_image_dumbbell_tricepfinal"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dumbbell Tricep"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:textSize="18sp"
                            android:textColor="@color/white"/>

                        <!-- Button -->
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="70dp"
                            android:background="@drawable/button_color"
                            android:fontFamily="@font/robotoblack"
                            android:gravity="center"
android:text="ابدأ التمرين"                            android:textColor="@color/black"
                            android:id="@+id/dumbbell" />
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>